<div class="panel panel-default">
	<div class="panel-heading">Connexion</div>
	<div class="panel-body">

    <% flash.each do |key, value| %>
    <div class="alert alert-danger">
      <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a>
      <%= value %>
    </div>
    <% end %>

		<form accept-charset="UTF-8" action="/login" method="post">
			<input name="utf8" value="✓" type="hidden">
			<%= hidden_field_tag :authenticity_token, form_authenticity_token %>


			<div class="form-group">
				<div class="col-lg-10">
					<label class="control-label" for="survey_name">Email</label>
					<input class="form-control" id="session_email" name="session[email]" type="text">
				</div>
			</div>



			<div class="form-group">
				<div class="col-lg-10">
					<label class="control-label" for="survey_name">Password</label>
					<input class="form-control"  id="session_password" name="session[password]" type="password">
				</div>
			</div>



			<div class="form-group">
				<div class="col-lg-10">
					<input class="btn btn-block btn-success" name="commit" type="submit" value="Log in"/>
				</div>
			</div>


		</form>
	</div>
</div>